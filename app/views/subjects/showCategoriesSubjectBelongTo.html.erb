<h1>categories</h1>



<div class="row">
  <div class="span6 offset3">
  <%= form_for(:categories_id, url: showCategoriesSubjectBelongTo_path) do |f| %>
    <%= f.label :subject %>
    <%= f.collection_select(:subject_id, Subject.all, :id, :name ) %>
    <br><br>
    <%= f.submit "Search", class: "btn btn-large btn-primary"  %> 
<% end %>
  </div>
</div>



<% if @categories %>
<% @categories.each do |category| %>
<br />
<br />
    <h3>category name</h3>
    <p><%= category.name %></p>
<br />
<% end %>
<% end %>



